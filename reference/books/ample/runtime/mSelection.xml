<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<class name="AMLSelection">
	<abstract>
		<locale>
			Implements Text Selection controlling behavior.
		</locale>
	</abstract>
	<remarks/>
	<examples/>
	<members>
		<methods />
		<properties>
			<property name="$selectable" type="Boolean">
				<description>
					<locale>
						Keeps a flag indicating whether element's text content can be selected.
					</locale>
				</description>
			</property>
		</properties>
		<attributes>
			<attribute name="aml:selectable" readonly="false" default="inherit">
				<values>
					<value name="true">
						<description>
							<locale>
								Text selection is enabled on element
							</locale>
						</description>
					</value>
					<value name="false">
						<description>
							<locale>
								Text selection is disabled on element
							</locale>
						</description>
					</value>
					<value name="inherit">
						<description>
							<locale>
								Text selection behavior is inherited from its parent container.
							</locale>
						</description>
					</value>
				</values>
				<description>
					<locale>
						Enables/disables text selection on element.
					</locale>
				</description>
			</attribute>
		</attributes>
		<events />
	</members>
</class>